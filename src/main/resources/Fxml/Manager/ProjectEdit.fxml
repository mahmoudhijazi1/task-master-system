<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmaster.Controllers.Manager.ProjectEditController">
   <children>
      <Text layoutX="14.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Project edit">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <VBox fillWidth="false" layoutX="14.0" layoutY="87.0" prefHeight="493.0" prefWidth="533.0" spacing="15.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="name" prefHeight="25.0" prefWidth="300.0" />
            <Label text="Description" />
            <TextArea fx:id="description" prefHeight="150.0" prefWidth="400.0" />
            <Label text="Start Date" />
            <DatePicker fx:id="startDate" prefHeight="25.0" prefWidth="300.0" />
            <Label text="End Date" />
            <DatePicker fx:id="endDate" prefHeight="25.0" prefWidth="300.0" />
            <ButtonBar prefHeight="40.0" prefWidth="280.0">
              <buttons>
                <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveAction" text="Save" />
                  <Button fx:id="cancelBtn" layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onAction="#cancelAction" prefHeight="25.0" prefWidth="261.0" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
